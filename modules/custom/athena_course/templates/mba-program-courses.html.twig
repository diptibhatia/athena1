<div class="container-fluid my-container">
         <div class="popular-courses shawdow-effect">
            <!-- <h1>MBA Programs</h1> -->
            <h2 style="text-align:left" class="title">Our MBA Programs</h2>
            
            <div class="courses">
            
            {% for coursedata in course %}
               <div class="course-item">
                  <div class="image">
                     <img src="{{base_path}}/images/course-image2.png" alt="course-image">
                  </div>
                  <div class="price-tag">
                     <p>${{coursedata.field_course_total_fee.value}}</p>
                  </div>
                  <div class="course-details">
                     <h1 class="headerWrap">{{coursedata.label}}</h1>
                     <h2>{{coursedata.field_course_awarding_body.value|raw }}</h2>
                     <div class="course-tags">
                        <p>Masters ( EQF Level 7) <span>|</span>{{coursedata.field_course_ects_credit.value}} Credits (ECTS)</p>
                     </div>
                     <h3><b>Duration : </b>Flexible ( ( {{coursedata.field_course_duration.value}}))</h3>
                  </div>
                  <div class="course-info">
                     {{coursedata.field_course_banner_description.value | truncate(60, true)}} 
                     <span><a style="color: inherit;" href="{{ url('<front>') }}course/{{coursedata.id}}" >Read More</a></span>
                  </div>
                  <div class="know-more">
                     <p><a style="color:inherit;" href="{{ url('<front>') }}course/{{coursedata.id}}" >Know More</a></p>
                  </div>
               </div>
               {% endfor %}
               <div class="control-arrows">
               <a class="prev"><i class="arrow arrow--left"></i></a>
               <a class="next"><i class="arrow arrow--right"></i></a>
                </div>
            </div>
            <div class="show-more">
               <button><a href="{{ url('<front>') }}/search-results/mba">Show more</a></button>
            </div>
         </div>
      </div>