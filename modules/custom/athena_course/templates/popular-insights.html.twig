<div class="about-popular-content OuterContainer">
	<div class="container pt-4">
		<h2 class="text-center">Our Popular Insights</h2>
		<div class="card-group">
      {% for popudata in popu %}
         {% if loop.index ==3 %}
			<div class="card">     
				<img class="card-img-top" width="365" height="193" src="{{file_url(popudata.field_insight_article_image_thum[0].entity.uri.value)}}" />
                <div class="insight-logo"><img class="card-img-top" src="{{base_path}}/images/insights.svg" alt="Card image cap"></div>
          <div class="readTime">11 min Read</div>
				<div class="card-body">
					<h5 class="card-title short-title">{{popudata.title.value}}</h5>
					<p class="card-text">
                  {% set text = popudata.body.value|render|striptags %}
                  {{ text|length > 120 ? text|slice(0, 120) ~ '...' : text }}
               </p>
				</div>
				<div class="card-footer d-flex justify-content-between purple-txt">
					<span class="cursor shareText"><img src="{{base_path}}/images/share.svg" height=18 />&nbsp;&nbsp;Share</span>
					<span>
						<a href="/node/{{popudata.nid.value}}">Read More</a>
					</span>
				</div>
			</div>
         {% else %}
         <div class="card mr-2">
         	<img class="card-img-top" width="365" height="193" src="{{file_url(popudata.field_insight_article_image_thum[0].entity.uri.value)}}" />
            <div class="insight-logo"><img class="card-img-top" src="{{base_path}}/images/insights.svg" alt="Card image cap"></div>
				<div class="card-body">
					<h5 class="card-title short-title">{{popudata.title.value}}</h5>
					<p class="card-text">
                  {% set text = popudata.body.value|render|striptags %}
                  {{ text|length > 120 ? text|slice(0, 120) ~ '...' : text }}
               </p>
				</div>
				<div class="card-footer d-flex justify-content-between purple-txt">
					<span class="cursor shareText"><img src="{{base_path}}/images/share.svg" height=18 />&nbsp;&nbsp;Share</span>
					<span>
						<a href="/node/{{popudata.nid.value}}">Read More</a>
					</span>
				</div>
			</div>
         {% endif %}
      {% endfor %}
		</div>
		<div class="text-center pt-4 pb-4">
			<button onclick="window.location='/insights/all';" class="athena-btn violet-btn" type="button">View All</button>
		</div>
	</div>
</div>