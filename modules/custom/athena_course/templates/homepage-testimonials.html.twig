<div class="why-athena">
   <div class="container-fluid my-container">
      <div class="testimonials">
         <div class="testimonials-item">
            <!-- <img src="/themes/custom/athena/images/testimonial-bg.png" alt=""/> -->
            <div class="item-one shawdow-effect">
               <!-- <h1>Testimonials</h1> --><img src="/themes/custom/athena/images/Testimonials-1.png" />
               <h2>Our Students Say<br />
                  About Us
               </h2>
               <h3>Our students speak about their learning experience at Athena, how the courses sharpened their management skills and the support they received at every stage.</h3>
               <button onclick="window.location='/insights/testimonials';">View All</button>
            </div>
            <div class="item-two">
               {% for testidata in testi %}
                  {% if loop.index ==1 %}
                     <div class="image-dot-testimonials-one"><img src="/themes/custom/athena/images/dots-course.svg" /></div>
                     <div class="student-review">
                        <div class="student-image">
                           <img alt="" data-entity-type="file" data-entity-uuid="0b022aa1-1b88-46ac-aea5-a7f890279dcf" height="150" src="/sites/default/files/Insights%20Images/markus.jpg" style="border-radius: 50%;border: 3px solid orange;" width="150" />
                           <div class="social-icon-linkedin"><a href="{{testidata.field_testimonial_linkedin_profi.value}}" target="_blank"><img alt="" src="/themes/custom/athena/images/linked-testimonial.svg" /></a></div>
                        </div>
                        <div class="info">
                           <h3><span>â€œ</span>{{testidata.title.value}}</h3>
                           <p>
                              {% set text = testidata.field_testimonial_text|render %}
                              {{ text|length > 80 ? text|slice(0, 80)|raw ~ '...' : text|raw }}
                              &nbsp;<span><a href="/testimonials/flexibitliy-and-content" hreflang="en">ReadMore</a></span>
                           </p>
                           <div class="student-info">{{testidata.field_testimonial_name_and_desig.value}}</div>
                        </div>
                     </div>   

               {% endfor %}

            </div>
         </div>
      </div>
   </div>
</div>