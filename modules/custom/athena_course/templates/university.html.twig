<div class="main-wrapper container-fluid p-0 university-wrapper">

        <div class="banner container-fluid banner-image p-0 bg-white">
            <img src="{{base_path}}/images/univ_banner/{{univ_data.univ_banner}}.png" class="col-lg-12 col-md-12 d-none d-lg-block d-md-block p-0" alt="Banner image">
            <img src="{{base_path}}/images/about-us-mobile-banner.png" class="col-lg-12 col-md-12 d-sm-block d-lg-none d-md-none p-0" alt="Banner image">
            <div class="container carousel-caption text-left pl-0">
                <h1 class="strong banner_title"> {{data.label }}</h1>
                <div class="row">
                    <div class="col-md-6">
                    {{univ_data.banner_desc|raw }}
                    </div>
                    <div class="col-md-6">
                      <a href="#">
                          <!-- <img src="{{base_path}}/images/coursepage/playintro.svg" alt="play button"><br />
                          <i>Watch Intro</i> -->
                      </a>
                    </div>
                </div>                
            </div>
        </div>

        <div class="container">
            <section class="informations">
                <div class="row">
                   <div class="col-md-8 col-sm-12">
                          <div class="info-1">
                            <h2 class="heading ">About {{data.label}}</h2>
                            <p>
                            {{univ_data.about|raw }}
                            </p>
                          </div>
                      {% if univ_data.accred is not empty %}
                          <div class="info-2">
                            <h2 class="heading ">{{univ_data.para_heading}}</h2>
                              <p>
                              {{univ_data.accred|raw}}
                              </p>
                          </div>
                          {% endif %}
                           {% if univ_data.rank is not empty %}
                          <div class="info-3">
                            <h2 class="heading ">Rankings</h2>
                              <p>{{univ_data.rank|raw}}</p>
                          </div> 
 {% endif %}                          
                   </div>

                   <div class="col-md-4 col-sm-12">
                     <div class="card-container">
                     {% if univ_data.video_link is not empty %}
                        <div class="card">
                        <!--  https://www.youtube.com/embed/5vejHYeGs3c -->
                            <iframe width="350" height="250" src="{{univ_data.video_link}}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
                        </div>
                         {% endif %}
                          {% if univ_data.enable_card %}
                           <div class="card">
                               <div class="card-icons">
                                 <img src="{{base_path}}/images/logo11.jpg" width="30%">
                                 <img src="{{base_path}}/images/logo12.png" width="35%"> 
                             </div>
                           </div>
                       <div class="card">
                            <div class="card-icons">
                              <img src="{{base_path}}/images/logo21.jpg" width="50%">
                              <img src="{{base_path}}/images/logo22.png" width="45%"> 
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-icons">
                              <img src="{{base_path}}/images/logo31.jpg" width="45%">
                              <img src="{{base_path}}/images/logo32.jpg" width="45%"> 
                          </div>
                        </div>
                        {% endif %}
                   </div>
                </div>
            </div></section>
