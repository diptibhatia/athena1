<!-- OTHER COURSES START -->
<div class="what-you-get">
  <div class="wrapper">
    <h2>Other Courses You might Interested</h2>
    <div class="container">
      <!--courses List: START-->
      <div class="row">
        <div class="col-12 p-0">
          <div class="shortterm-courses">
            {% for course in related_courses_data.related_courses %}
                {% set course_url =  related_courses_data.lms_url ~ '/student-dashboard/course/' ~ course.cid ~ '/' ~ course.slug %}
                <div class="item content" style="display:block;">
                  <div class="item-inner">
                    <div class="course-item-hover" style="padding:22px 15px 18px;">
                      <div class="row">
                        <div class="col-12 social-icons card-icon">
                          <a href="http://www.facebook.com/sharer.php?u={{course_url}}" target="_blank"><img
                              src="/themes/custom/athena/images/icons/facebook.svg" /></a>
                          <a href="http://twitter.com/share?url={{course_url}}" target="_blank"><img
                              src="/themes/custom/athena/images/icons/twitter.svg" class="ml-2 mr-2" /></a>
                          <a href="http://www.linkedin.com/shareArticle?mini=true&url={{course_url}}"
                            target="_blank"><img src="/themes/custom/athena/images/icons/linkedin.svg" /></a>
                        </div>
                      </div>
                      <div class="course-details text-center0">
                        <h3>{{course.course_name}}</h3>
                        <div class="course-info">
                          <p class="small">{{course.university_name}}</p>
                          {{ course.course_overview|raw }}
                        </div>
                        <h4><a target="_blank" href="{{course_url}}">More Information ></a></h4>
                        <div class="col-12 button-area"><a target="_blank" href="{{course_url}}"><button>Start
                              Now</button></a></div>
                      </div>
                    </div>
                    <div class="course-item">
                      <div class="row heading m-0">
                        <div class="col-9">
                          <img src="{{course.white_logo}}" alt="{{ course.university_name }}">
                        </div>
                        <div class="col-3">
                          <span class="free-text">{{course.field_course_amount}}</span>
                        </div>
                      </div>
                      <div class="image">
                        <img width="100%" src="{{course.course_image_path}}" alt="course-image">
                      </div>
                      <div class="course-details">
                        <h3>{{course.course_name}}</h3>
                        <div class="course-info">
                          <p class="small">{{ course.course_introduction|raw }}</p>
                        </div>
                        <div class="col-12 button-area"><a target="_blank" href="{{course_url}}"><button>Start
                              Now</button></a></div>
                      </div>
                    </div>
                  </div>
                </div>
            {% endfor %}
            <input type="hidden" id="total" value="{{related_courses_data.total}}">
            <input type="hidden" id="current_page" value="{{related_courses_data.current_page}}">
            <input type="hidden" id="subject_id" value="{{related_courses_data.subject_id}}">
          </div>
        </div>
        {% if related_courses_data.total > 10 %}
            <div class="col-12 text-center">
              <button id="loadMore" class="btn athena-btn purple-btn"><a href="http://athena.edu/course-home"
                  style="font-weight:initial;color:inherit;text-decoration:none;">Show More</a></button>
                <div id="loading" class="loader">
                <img style="height: 50px;" src="/themes/custom/athena/images/smo/shortcourse-assets/load-more-spinner.gif" alt="loader">
                </div>
              {# <button id="showLess" class="btn athena-btn purple-btn" style="display: none;text-decoration:none;">Show
                Less</button> #}
            </div>
        {% endif %}
        

      </div>
      <!--courses List: END-->
    </div>
  </div>
</div>
