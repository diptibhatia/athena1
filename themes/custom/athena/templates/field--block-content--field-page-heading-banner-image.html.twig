{%
  set title_classes = [
    label_display == 'visually_hidden' ? 'visually-hidden',
  ]
%}

{% if label_hidden %}
  {% if multiple %}
    <div class="banner container-fluid banner-image p-0 bg-white">
      {% for item in items %}
        {{ item.content }}
      {% endfor %}
  {% else %}
    {% for item in items %}
      <div class="banner container-fluid banner-image p-0 bg-white">{{ item.content }}
    {% endfor %}
  {% endif %}
{% else %}
    {% if multiple %}
    {% endif %}
    {% for item in items %}
      <div class="banner container-fluid banner-image p-0 bg-white">{{ item.content }}
    {% endfor %}
    {% if multiple %}
    {% endif %}
{% endif %}
