{% if label_hidden %}
  {% if multiple %}
    <div{{ attributes }}>
      {% for item in items %}
        <span{{ item.attributes }} class="meta">{{ item.content }}</span>
      {% endfor %}
    </div>
  {% else %}
    {% for item in items %}
      <span{{ attributes }} class="meta" >{{ item.content }}</span>
      {% if comment_count %}
        | {{comment_count}} <img src="/themes/custom/athena/images/comment.svg">
      {% endif %}
      {% if node_stats %}
        | {{node_stats}} <img alt="eye icon" src="/themes/custom/athena/images/eye.svg">
      {% endif %}
    {% endfor %}
  {% endif %}
{% else %}
  <div{{ attributes }} >
    <span{{ title_attributes.addClass(title_classes) }} class="meta" >{{ label }}</span>
    {% if multiple %}
      <div>
    {% endif %}
    {% for item in items %}
      <span{{ item.attributes }}  class="meta">{{ item.content }}</span>
    {% endfor %}
    {% if multiple %}
      </div>
    {% endif %}
  </div>
{% endif %}
